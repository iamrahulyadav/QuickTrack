<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppEditText">
        <item name="android:background">@drawable/edittext_bg</item>
    </style>
    <style name="AppButton">
        <item name="android:background">@drawable/button_bg_with_shadow</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="AppRoundedButton">
        <item name="android:background">@drawable/rounded_button_bg_with_shadow</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="simplerectangle" >
        <item name="android:background">@drawable/simplerectangle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/Light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="simpleline" >
        <item name="android:background">@drawable/simpleline</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/Light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="linestyle">
        <item name="android:background">@drawable/line</item>
    </style>
    <style name="DashButtonStyle">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/dim_white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>
</resources>
