<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
   >
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:orientation="vertical">


    <EditText
        style="@style/simplerectangle"
        android:hint="Current Password"
        android:imeOptions="actionNext"
        android:id="@+id/change_password_edtCurrentPass"
        android:inputType="textPassword"/>
    <EditText
        style="@style/simplerectangle"
        android:hint="New Password"
        android:id="@+id/change_password_edtNewPass"
        android:imeOptions="actionNext"
        android:inputType="textPassword"/>
    <EditText
        style="@style/simplerectangle"
        android:hint="Confirm Password"
        android:id="@+id/change_password_edtConfirmNewPass"
        android:imeOptions="actionDone"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:id="@+id/change_password_btnUpdatePass"
        android:padding="13dp"
        android:layout_margin="15dp"
        android:gravity="center"/>
</LinearLayout>
</LinearLayout>
